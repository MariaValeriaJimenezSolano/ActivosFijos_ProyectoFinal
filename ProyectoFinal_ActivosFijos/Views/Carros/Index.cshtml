@{
    ViewBag.Title = "Carros";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; // Utiliza el diseño específico para administración
}
<style>
    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 20px;
        background-color: #f5f5f5;
    }

    .carousel-item {
        text-align: center;
        overflow: hidden;
    }

        .carousel-item img {
            max-height: 300px;
            width: 100%;
            object-fit: cover;
        }

    .img-container {
        height: 232px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #ddd;
    }

    .container.mt-4 {
        margin-top: 30px;
    }

    .card:hover {
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        transform: scale(1.02);
        transition: all 0.3s ease;
    }

    .contenedor-filtros {
        background: black;
        color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin-bottom: 25px;
    }

        .contenedor-filtros .form-label {
            margin-bottom: 10px;
        }

        .contenedor-filtros .form-control,
        .contenedor-filtros .form-range {
            margin-bottom: 15px;
        }

        .contenedor-filtros .btn {
            border-radius: 20px;
            padding: 10px;
            font-size: 16px;
        }

        .contenedor-filtros .form-range {
            width: 100%;
        }

        .contenedor-filtros #precioMaxOutput {
            display: block;
            text-align: right;
            margin-top: 5px;
        }

        .contenedor-filtros .btn-secondary {
            background-color: black;
            border: 2px solid black;
        }

            .contenedor-filtros .btn-secondary:hover {
                background-color: black;
                border-color: black;
            }

    .custom-btn {
        border: 2px solid black !important;
        color: black;
        background-color: transparent;
        width: 100%;
        transition: all 0.3s ease;
    }

        .custom-btn:hover {
            border: 2px solid black !important;
            background-color: black !important;
            color: white !important;
        }
</style>

<main>
    <h2 style="text-align:center;"> Lista de Carros</h2>

    <div class="container mt-4">
        <div class="row mb-4">
            <div class="col-lg-12">
                <div class="contenedor-filtros">
                    <form method="get" action="@Url.Action("Index", "Carro")" class="row g-3">
                        <div class="col-md-4">
                            <label for="Modelo" class="form-label">Modelo:</label>
                            <input type="text" class="form-control" id="Modelo" name="Modelo" placeholder="-- Cualquier modelo --" value="@ViewBag.ModeloSeleccionado" />
                        </div>
                        <div class="col-md-4">
                            <label for="Anio" class="form-label">Año:</label>
                            <input type="text" class="form-control" id="Anio" name="Anio" placeholder="-- Cualquier año --" value="@ViewBag.AnioSeleccionado" />
                        </div>
                        <div class="col-md-4">
                            <label for="Precio" class="form-label">Precio:</label>
                            <input type="text" class="form-control" id="Precio" name="Precio" placeholder="-- Cualquier Precio --" value="@ViewBag.PrecioSeleccionado" />
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-danger w-50" style="margin-left: 160px; margin-top:10px;">Buscar</button>
                        </div>
                        <div class="col-md-6">
                            <a href="@Url.Action("Index", "Carro")" class="btn btn-danger w-50" style="margin-left: 160px; margin-top: 10px;">Limpiar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <a class="btn btn-success mb-4" href="@Url.Action("Add")">Agregar</a>
        <div class="row">
            @foreach (var carro in Model)
            {
                <div class="col-md-6 col-lg-3 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title text-center ">@carro.Modelo - @carro.Anio</h5>
                            <p class="card-text">Año: @carro.Anio</p>
                            <p class="card-text"><strong>Precio: @string.Format("${0:N2}", carro.Precio) | @carro.CantidadEnStock Disponibles</strong></p>

                            <!-- Carrusel de imágenes -->
                            <div id="carouselCarro@(carro.Id)" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    @for (int i = 0; i < 2; i++)
                                    {
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            @if (i == 0 && carro.Imagen1 != null && carro.Imagen1.Length > 0)
                                            {
                                                <img src="data:image/png;base64,@Convert.ToBase64String(carro.Imagen1)" alt="Imagen del carro" class="img-fluid">
                                            }

                                            @if (i == 1 && carro.Imagen2 != null && carro.Imagen2.Length > 0)
                                            {
                                                <img src="data:image/png;base64,@Convert.ToBase64String(carro.Imagen2)" alt="Segunda Imagen del carro" class="img-fluid">
                                            }

                                            <!-- Cuando no hay imagen -->
                                            @if ((i == 0 && (carro.Imagen1 == null || carro.Imagen1.Length == 0)) ||
                                                (i == 1 && (carro.Imagen2 == null || carro.Imagen2.Length == 0)))
                                            {
                                                <div class="img-container">
                                                    <p class="text-center" style="font-size: larger; color: #0d6efd;">Sin Imagen [@i]</p>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>

                                <!-- Controles del carrusel -->
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselCarro@(carro.Id)" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Anterior</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselCarro@(carro.Id)" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Siguiente</span>
                                </button>
                            </div>

                            <!-- Acciones -->
                            <div class="mt-3">
                                <a class="btn btn-success" href="@Url.Action("Edit", new { CarroID = @carro.Id })">Editar</a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", new { CarroID = @carro.Id })" onclick="return confirm('¿Estás seguro de que deseas eliminar este carro?');">Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>

<script>
    // Inicializar los carruseles al cargar la página
    @foreach (var carro in Model)
    {
        <text>
    var carouselCarro@(carro.Id) = new bootstrap.Carousel(document.getElementById('carouselCarro@(carro.Id)'));
        </text>
    }
</script>

<!-- Agregar Font Awesome y Bootstrap (popper.js y bootstrap.js) -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.min.js"></script>