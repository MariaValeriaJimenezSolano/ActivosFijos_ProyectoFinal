    .container {
        background-color: white;
        text-decoration: none;
        list-style: none;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
    }

    .img-thumbnail {
        width: 100%;
        max-width: 200px;
        height: auto;
    }
</style>
